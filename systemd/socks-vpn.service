[Unit]
Description=Socks VPN Service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
Environment=VPN_CONFIG=/usr/local/etc/socks-vpn.conf
ExecStart=/usr/lib/socks-vpn/socks-vpn-daemon
Restart=on-failure
RestartSec=3
KillSignal=SIGTERM
TimeoutStopSec=25
RuntimeDirectory=socks-vpn

[Install]
WantedBy=multi-user.target
